<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Spinner android:id="@+id/cmbMaptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner android:id="@+id/cmbMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cmbMaptype"
        />

    <Spinner android:id="@+id/cmbPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cmbMode"
         />

    <android.support.design.widget.FloatingActionButton android:id="@+id/btn_Locs"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="230dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        />

    <android.support.design.widget.FloatingActionButton android:id="@+id/btn_ReadFB"
        android:src="@drawable/ic_read"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        />


    <android.support.design.widget.FloatingActionButton android:id="@+id/btn_inicioExp"
        android:src="@drawable/ic_onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        />

    <android.support.design.widget.FloatingActionButton android:id="@+id/btn_calendar"
        android:src="@drawable/ic_calendar"
        app:backgroundTint="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"

        />

    <android.support.design.widget.FloatingActionButton android:id="@+id/btnFB"
        android:src="@drawable/ic_fb"
        app:backgroundTint="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"

        />



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cmbMode" />


</RelativeLayout>