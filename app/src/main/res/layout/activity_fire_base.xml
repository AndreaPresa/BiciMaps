<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michel.bicimaps.FireBaseActivity">

    <TextView android:id="@+id/dateTitle"
        android:layout_width="327dp"
        android:layout_height="74dp"
        android:layout_above="@+id/lstLocations"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp" />

    <android.support.v7.widget.RecyclerView android:id="@+id/lstLocations"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <android.support.design.widget.FloatingActionButton android:id="@+id/btn_backToMap"
        android:src="@drawable/ic_clear"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>